<?xml version="1.0"?>
<robot name="diff_drive" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:arg name="namespace" default="" />

  <material name="orange">
    <color rgba="0.8 0.4 0.0 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1.0"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1.0"/>
  </material>

  <!-- Base Link -->
  <link name="chassis">
    <collision>
      <origin xyz="-0.151427 -0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="2.01142 1 0.568726"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="-0.151427 -0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="2.01142 1 0.568726"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <inertial>
      <origin xyz="-0.151427 -0 0.5" rpy="0 0 0"/>
      <mass value="1.14395"/>
      <inertia
        ixx="0.126164"
        ixy="0.0"
        ixz="0.0"
        iyy="0.416519"
        iyz="0.0"
        izz="0.481014"/>
    </inertial>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0.554283 0.625029 0.3" rpy="-1.5707 0 0"/>
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.2"/>
  </joint>

  <!-- left wheel Link -->
  <link name="left_wheel">
    <collision>
      <geometry>
        <sphere radius="0.3"/>
      </geometry>
    </collision>

    <visual>
      <geometry>
        <sphere radius="0.3"/>
      </geometry>
      <material name="black"/>
    </visual>

    <inertial>
      <mass value="2"/>
      <inertia ixx="0.145833"
               ixy="0.0"
               ixz="0.0"
               iyy="0.145833"
               iyz="0.0"
               izz="0.125"/>
    </inertial>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0.554283 -0.625029 0.3" rpy="-1.5707 0 0"/>
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.2"/>
  </joint>

  <!-- right wheel Link -->
  <link name="right_wheel">
    <collision>
      <geometry>
        <sphere radius="0.3"/>
      </geometry>
    </collision>

    <visual>
      <geometry>
        <sphere radius="0.3"/>
      </geometry>
      <material name="black"/>
    </visual>

    <inertial>
      <mass value="2"/>
      <inertia ixx="0.145833"
               ixy="0.0"
               ixz="0.0"
               iyy="0.145833"
               iyz="0.0"
               izz="0.125"/>
    </inertial>
  </link>

  <joint name="caster_joint" type="fixed">
    <origin xyz="-0.957138 -0 0.2" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="caster"/>
  </joint>

  <!-- caster frontal wheel Link -->
  <link name="caster">
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>

    <visual>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
      <material name="white"/>
    </visual>

    <inertial>
      <origin xyz="-0.957138 -0 0.2" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia
        ixx="0.1"
        ixy="0.0"
        ixz="0.0"
        iyy="0.1"
        iyz="0.0"
        izz="0.1"/>
    </inertial>
  </link>

  <!-- ========================= -->
  <!-- LiDAR (gpu_lidar) sensor  -->
  <!-- ========================= -->

  <link name="lidar_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.125"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.2" length="0.2"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.2" length="0.2"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <!-- Mount roughly on top-center of chassis -->
    <parent link="chassis"/>
    <child link="lidar_link"/>
    <origin xyz="0.0 0.0 0.8" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo sensor attached to lidar_link (Gazebo Sim / gpu_lidar) -->
  <gazebo reference="lidar_link">
    <sensor name="lidar" type="gpu_lidar">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>10</update_rate>

      <!-- Topic in Gazebo; will be bridged to ROS with ros_gz_bridge -->
      <topic>scan</topic>

      <!-- Frames for Gazebo + ROS bridge -->
      <gz_frame_id>lidar_link</gz_frame_id>
      <frame_id>lidar_link</frame_id>

      <lidar>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1.0</resolution>
            <min_angle>0.0</min_angle>
            <max_angle>6.283185</max_angle>
          </horizontal>
          <!-- 2D lidar, single vertical layer -->
          <vertical>
            <samples>1</samples>
            <resolution>1.0</resolution>
            <min_angle>0.0</min_angle>
            <max_angle>0.0</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.12</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </lidar>
    </sensor>
  </gazebo>

  <!-- ========================= -->
  <!-- Depth RGB-D camera sensor -->
  <!-- ========================= -->

  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.13 0.022"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.13 0.022"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.035"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <!-- Slightly forward + above chassis -->
    <parent link="chassis"/>
    <child link="camera_link"/>
    <origin xyz="0.85 0.0 0.7" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo RGB-D camera sensor (publishes image + depth) -->
  <gazebo reference="camera_link">
    <sensor name="depth_camera" type="rgbd_camera">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>15.0</update_rate>

      <!-- Gazebo topic root; will become /depth_camera/... in gz -->
      <topic>depth_camera</topic>

      <gz_frame_id>camera_link</gz_frame_id>
      <frame_id>camera_link</frame_id>

      <camera>
        <horizontal_fov>1.047198</horizontal_fov> <!-- ~60 deg -->
        <image>
          <width>640</width>
          <height>480</height>
        </image>
        <clip>
          <near>0.05</near>
          <far>10.0</far>
        </clip>
      </camera>

      <!-- Some RGB-D specific params -->
      <baseline>0.2</baseline>
      <pointCloudCutoff>0.5</pointCloudCutoff>
      <pointCloudCutoffMax>10.0</pointCloudCutoffMax>
    </sensor>
  </gazebo>

  <!-- ========================= -->
  <!-- ros2_control + gz plugin  -->
  <!-- ========================= -->

  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    <joint name="left_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="right_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <ros>
        <namespace>$(arg namespace)</namespace>
      </ros>
      <parameters>$(find gz_ros2_control_demos)/config/diff_drive_controller.yaml</parameters>
    </plugin>
  </gazebo>

</robot>
